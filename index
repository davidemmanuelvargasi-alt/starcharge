  <script>
    // Helpers
    const $ = (q, el=document) => el.querySelector(q);
    const $$ = (q, el=document) => Array.from(el.querySelectorAll(q));

    const slidesEl = $("#slides");
    const slideIds = ["#inicio", "#hogar", "#negocio", "#flotas"];
    const dots = $$(".dot");
    const bar = $("#bar");

    let current = 0;
    let timer = null;
    let progressRAF = null;

    // Config
    const SLIDE_MS = 6000;          // cada cu√°nto cambia
    const RESUME_AFTER_MS = 4500;   // reanuda despu√©s de interacci√≥n
    const PAUSE_ON_HOVER_DESKTOP = true;

    function go(hash){
      const target = $(hash);
      if (!target) return;
      target.scrollIntoView({behavior:"smooth", block:"start"});
    }

    function setActiveDot(i){
      dots.forEach((d, idx)=> d.classList.toggle("active", idx === i));
    }

    function indexFromScroll(){
      const sections = slideIds.map(id => $(id)).filter(Boolean);
      let bestIdx = 0;
      let bestDist = Infinity;

      for (let i=0;i<sections.length;i++){
        const rect = sections[i].getBoundingClientRect();
        const dist = Math.abs(rect.top);
        if (dist < bestDist){
          bestDist = dist;
          bestIdx = i;
        }
      }
      return bestIdx;
    }

    function syncFromScroll(){
      const i = indexFromScroll();
      if (i !== current){
        current = i;
        setActiveDot(current);
        restartProgress();
      }
    }

    function next(){
      current = (current + 1) % slideIds.length;
      setActiveDot(current);
      go(slideIds[current]);
      restartProgress();
    }

    function stopAuto(){
      if (timer) clearInterval(timer);
      timer = null;
      stopProgress();
    }

    function startAuto(){
      stopAuto();
      timer = setInterval(next, SLIDE_MS);
      restartProgress();
    }

    function stopProgress(){
      if (progressRAF) cancelAnimationFrame(progressRAF);
      progressRAF = null;
      if (bar) bar.style.width = "0%";
    }

    function restartProgress(){
      stopProgress();
      if (!bar) return;

      const start = performance.now();
      const tick = (t) => {
        const p = Math.min(1, (t - start) / SLIDE_MS);
        bar.style.width = (p * 100).toFixed(2) + "%";
        if (p < 1 && timer) progressRAF = requestAnimationFrame(tick);
      };
      progressRAF = requestAnimationFrame(tick);
    }

    // Click en dots
    dots.forEach(dot => {
      dot.addEventListener("click", () => {
        const i = Number(dot.dataset.dot || "0");
        current = i;
        setActiveDot(current);
        go(slideIds[current]);
        restartProgress();
      });
    });

    // Botones data-go
    $$("[data-go]").forEach(btn=>{
      btn.addEventListener("click", ()=> go(btn.getAttribute("data-go")));
    });

    // Drawer
    const drawer = $("#drawer");
    const openMenu = $("#openMenu");
    const closeMenu = $("#closeMenu");

    function openDrawer(){
      drawer.classList.add("open");
      drawer.setAttribute("aria-hidden","false");
      document.body.style.overflow = "hidden";
      stopAuto();
    }
    function closeDrawerFn(){
      drawer.classList.remove("open");
      drawer.setAttribute("aria-hidden","true");
      document.body.style.overflow = "";
      scheduleResume();
    }
    openMenu.addEventListener("click", openDrawer);
    closeMenu.addEventListener("click", closeDrawerFn);
    drawer.addEventListener("click", (e)=>{ if(e.target === drawer) closeDrawerFn(); });
    $$(".drawerLink").forEach(a => a.addEventListener("click", closeDrawerFn));

    // Pausar al interactuar, reanudar despu√©s
    let resumeTO = null;
    function scheduleResume(){
      if (resumeTO) clearTimeout(resumeTO);
      resumeTO = setTimeout(() => startAuto(), RESUME_AFTER_MS);
    }

    const pauseEvents = ["wheel","touchstart","keydown","mousedown"];
    pauseEvents.forEach(evt => window.addEventListener(evt, () => { stopAuto(); scheduleResume(); }, {passive:true}));
    slidesEl.addEventListener("scroll", () => { syncFromScroll(); stopAuto(); scheduleResume(); }, {passive:true});

    // Pausar en hover (desktop)
    if (PAUSE_ON_HOVER_DESKTOP){
      slidesEl.addEventListener("mouseenter", () => stopAuto());
      slidesEl.addEventListener("mouseleave", () => scheduleResume());
    }

    // Form demo
    $("#contactForm").addEventListener("submit", (e)=>{
      e.preventDefault();
      alert("Mensaje enviado (demo).");
      e.target.reset();
    });

    // A√±o
    $("#year").textContent = new Date().getFullYear();

    // Init
    setActiveDot(current);
    startAuto();
  </script>
</body>
</html>
